<% if flash[:event_creation_success] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:event_creation_success] %>
  </div>
<% end %>

<% if flash[:sign_in_to_create] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:sign_in_to_create] %>
  </div>
<% end %>

<% if flash[:already_attending] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:already_attending] %>
  </div>
<% end %>

  <h1>Voici la liste des évènements de Montpellier !!!</h1>
  <div class="d-flex flex-wrap">
      <% Event.all.each do |e| %>
        <div class="card border-info mb-3" style="max-width: 20rem;">
            <div class="card-header"><%= e.location %></div>
            <div class="card-body">
                <h4 class="card-title"><%= link_to "#{e.title}", event_path(e.id) %></h4>
                <p class="card-text">
                <br>
                  <li><u>Début :</u><br><%= e.start_date.strftime("%d %B %Y, %H:%M") %></li>
                  <br>
                  <li><u>Durée :</u> <%= e.duration %> minutes</li>
                  <br>
                  <li><u>Prix :</u> <%= e.price %> €</li>
                  <br>
                  <li><u>Description : </u><br><%= e.description %></li> 
                  <br><br>
                  <%= link_to 'Rejoindre cet évènement', attendances_path(my_event_id: e.id), method: :post %>        
                </p>
            </div>
        </div>
    <% end %>
  </div>
