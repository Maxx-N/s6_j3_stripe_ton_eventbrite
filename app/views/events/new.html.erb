
<h1>Crée ton nouvel évènement !!!</h1>

<br /> <br />

<%= form_tag url_for(action: 'create'), method: "post" do %>

  <div class="form-group">
  <%= label_tag 'Titre' %>
  <%= text_field_tag 'title' %>
  </div>
  <br /> <br />

  <div class="form-group">
  <%= label_tag 'Date et heure de début' %>
  <%= datetime_field_tag 'start_date' %>
  </div>
  <br /> <br />

  <div class="form-group">
  <%= label_tag 'Durée (en minutes)' %>
  <%= number_field_tag 'duration' %>
  </div>
  <br /> <br />

  <div class="form-group">
  <%= label_tag 'Lieu' %>
  <%= text_field_tag 'location'%>
  </div>
  <br /> <br />

  <div class="form-group">
  <%= label_tag 'Prix' %>
  <%= number_field_tag 'price' %>
  </div>
  <br /> <br />

  <div class="form-group">
  <%= label_tag 'Description' %>
  </div>
  <%= text_area_tag 'description' %>
  <br /> <br />

  <div class="form-group">
  <%= submit_tag "Créer l'évènement !" %>
  </div>

<% end %>